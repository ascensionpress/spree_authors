<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<div class="toolbar" data-hook="toolbar">
  <ul class="actions">
    <li>
      <p><%= button_link_to 'New Author Page', new_object_url, :icon => 'add', :id => 'admin_new_author_link' %></p>
    </li>
  </ul>
  <br class="clear" />
</div>

<h1>Authors</h1>

<table class="index" id="listing_slides" data-hook>
  <thead>
    <tr data-hook="admin_slides_index_headers">
      <th>Name</th>
      <th data-hook="admin_slides_index_header_actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author|%>
      <tr id="<%= dom_id author %>" data-hook="admin_slides_index_rows">
        <td width="350px" ><%= link_to(author.name, author_url(author), :target => "_blank") %></td>
        <td data-hook="admin_slides_index_row_actions">
          <%= link_to_edit author, :class => 'edit' %> &nbsp;
          <%= link_to_delete author %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


